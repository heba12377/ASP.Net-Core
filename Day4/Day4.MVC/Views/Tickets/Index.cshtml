@using Day4.BL.ViewModels;
@model List< TicketReadVM>;

<a asp-action="Add">Add a new item</a>

<div class="container">
    @foreach (var item in Model)
    {
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@item.Id</h5>
                <h6 class="card-subtitle mb-2 ">@item.Title</h6>
                <h6 class="card-subtitle mb-2 ">@item.Description</h6>
                <h6 class="card-subtitle mb-2 ">@item.Severity</h6>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
               
            </div>
        </div>
    }
</div>